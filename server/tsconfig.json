{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "../dist/server",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["./*"],
      "@/types/*": ["./types/*"],
      "@/lib/*": ["./lib/*"],
      "@/prisma/*": ["./prisma/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./**/*.ts",
    "../types/**/*.ts",
    "../lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "../node_modules",
    "dist",
    "../dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
